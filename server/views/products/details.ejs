<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Product Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Product Name" name="Product_Name" value="<%= products.Product_Name %>" required>
              </div>
              <div class="form-group">
                <label for="DescriptionTextField">Description</label>
                <input type="text" class="form-control" id="DescriptionTextField"
                placeholder="Description" name="Description" value="<%= products.Description %>"  required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Price" name="Price" value="<%= products.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Brand</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Brand" name="Brand" value="<%= products.Brand %>"  required>
              </div>
              <div class="form-group">
                <label for="SizeTextField">Size</label>
                <input type="text" class="form-control" id="SizeTextField"
                placeholder="Size" name="Size" value="<%= products.Size %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/products" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
