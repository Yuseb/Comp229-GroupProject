<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Product List </h3>
         
          <a href="products/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Product</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Product Name</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Brand</th>
                  <th class="text-center">Size</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < products.length; count++) { %>
                <tr>
                  <td><%= products[count].Product_Name %></td>
                  <td class="text-center"><%= products[count].Description %></td>
                  <td class="text-center">$<%= products[count].Price %></td>
                  <td class="text-center"><%= products[count].Brand %></td>
                  <td class="text-center"><%= products[count].Size %></td>

                  <td class="text-center">
                 
                    <a href="products/<%= products[count]._id %>" class="btn btn-primary">Edit</a>
                  </td>

                  <td class="text-center">
               
                    <a href="products/delete/<%= products[count]._id %>" class="btn btn-primary">Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


