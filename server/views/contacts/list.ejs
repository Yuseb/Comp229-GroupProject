<!DOCTYPE html>
<html lang="en">
<%- ../include partials/header.ejs %> 
<body>
  <%- ../include partials/main_nav.ejs %> 
<main>
    <div class="container bg-3 text-center">
    <div class="row">
    <div class= "col-md-offset-3 col-md-6">
       <h1><%= title %></h1>
       <% if(typeof displayName == 'string' && displayName) { %>
       <a href="/contact-list/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i>Add a contact</a>
        <% } %>
       <br/>
    <table class="table table-bordered table-striped table-hover">
       
        <!--Header Row-->
        <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Number</th>
            <th class="text-center">Email</th>
            <% if(typeof displayName == 'string' && displayName) { %>
            <th class="text-center"></th>
            <th class="text-center"></th>
            <% } %>
        </tr>

        <!-- Repeatable Template Row-->

    <% for (let count=0; count<ContactList.length; count++){%>
<tr>
    <td class="text-center"><%= ContactList[count].name %></td>
    <td class="text-center"><%= ContactList[count].number %></td>
    <td class="text-center"><%= ContactList[count].email %></td>
    <% if(typeof displayName == 'string' && displayName) { %>
    <td class="text-center col-1">
    <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
    <i class="fa fa-pencil-alt"></i>Edit</a>
    </td>
    <td class="text-center col-1">
        <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
        <i class="fa fa-trash-alt"></i>Delete</a>
    </td>
    <% } %>
</tr>
<%}%>       
            </table> 
         </div>
     </div>
    </div>
   </main>
   <%- ../include partials/bottom_nav.ejs %> 

   <%- ../include partials/scripts.ejs %> 
   </body>
   </html>